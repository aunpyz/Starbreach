shader ComputeColorTextureScrollParam : ComputeColor, Texturing
{
    rgroup PerMaterial
    {
        stage Texture2D MyTexture;

        stage float2 Offset;
    }

    override float4 Compute()
    {
        return MyTexture.Sample(Texturing.LinearRepeatSampler, streams.TexCoord + Offset);
    }
};
